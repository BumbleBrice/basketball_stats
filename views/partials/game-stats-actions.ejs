<div class="stats-buttons">
    <div class="stats-group">
        <h4>Tirs</h4>
        <button class="stat-btn" data-stat="two_points" data-result="made">2pts ✓</button>
        <button class="stat-btn" data-stat="two_points" data-result="missed">2pts ✗</button>
        <button class="stat-btn" data-stat="three_points" data-result="made">3pts ✓</button>
        <button class="stat-btn" data-stat="three_points" data-result="missed">3pts ✗</button>
        <button class="stat-btn" data-stat="free_throw" data-result="made">LF ✓</button>
        <button class="stat-btn" data-stat="free_throw" data-result="missed">LF ✗</button>
    </div>

    <div class="stats-group">
        <h4>Rebonds</h4>
        <button class="stat-btn" data-stat="offensive_rebound">OFF</button>
        <button class="stat-btn" data-stat="defensive_rebound">DEF</button>
    </div>

    <div class="stats-group">
        <h4>Autres</h4>
        <button class="stat-btn" data-stat="assist">Passe D</button>
        <button class="stat-btn" data-stat="steal">Inter</button>
        <button class="stat-btn" data-stat="block">Contre</button>
        <button class="stat-btn" data-stat="turnover">BP</button>
        <button class="stat-btn" data-stat="foul">Faute</button>
    </div>
</div>
