<%- contentFor('body') %>
<div class="auth-container">
    <div class="auth-box">
        <h2>Inscription</h2>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <form action="/auth/register" method="POST" class="auth-form">
            <div class="form-group">
                <label for="firstname">Prénom</label>
                <input 
                    type="text" 
                    id="firstname" 
                    name="firstname" 
                    required 
                    class="form-control"
                    value="<%= typeof form !== 'undefined' ? form.firstname : '' %>"
                >
            </div>

            <div class="form-group">
                <label for="lastname">Nom</label>
                <input 
                    type="text" 
                    id="lastname" 
                    name="lastname" 
                    required 
                    class="form-control"
                    value="<%= typeof form !== 'undefined' ? form.lastname : '' %>"
                >
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="form-control"
                    value="<%= typeof form !== 'undefined' ? form.email : '' %>"
                >
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    class="form-control"
                >
                <small class="form-text text-muted">
                    Le mot de passe doit contenir au moins 4 caractères
                </small>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmer le mot de passe</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    required 
                    class="form-control"
                >
            </div>

            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
        </form>

        <div class="auth-footer">
            Déjà inscrit ? <a href="/auth/login">Se connecter</a>
        </div>
    </div>
</div>
