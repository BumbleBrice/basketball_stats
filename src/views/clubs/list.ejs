<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= title %></h1>
        <a href="/clubs/create" class="btn btn-primary">Créer un club</a>
    </div>

    <div class="row">
        <% clubs.forEach(club => { %>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= club.name %></h5>
                        <p class="card-text">Code: <%= club.code_club %></p>
                        <a href="/clubs/<%= club.id %>" class="btn btn-info">Détails</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %> 